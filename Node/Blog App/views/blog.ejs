<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("./partials/header") %>
</head>

<body>
    <%- include("./partials/navbar") %>
    <div class="container mt-3">
<h1>
    <%= blog.title %>
</h1>

<img src="<%= blog.coverImageURL %>" alt="sadad">
<pre>
    <%= blog.body %>
</pre>
</div>
<div class="container mt-3">
    <p>Author</p>
    <img src="<%= blog.createdBy.profileImageURL %>" width="50px"/><%= blog.createdBy.fullName %>
</div>

<div class="container mt-3">
    <h1>Comments (<%= comments.length %>)</h1>
    <% if(locals.user){%>
    <form method="post" action="/blog/comment/<%= blog._id %>">
        <div class="form-group">
            <input type="text" class="form-control" id="content"  name="content" placeholder="Enter comment">
        </div>
            <button type="submit" class="btn btn-primary">Comment</button>
    </form>
    <% } %>
    <div>
        <% comments.forEach(comment => { %>
         <div>
                <img src="<%= blog.createdBy.profileImageURL %>" width="50" />
                <%= blog.createdBy.fullName %>
                <p><%= comment.content %></p>
         </div>
        <% }) %>
    </div>

</div>
<%- include("./partials/scripts") %>
     
</body>

</html>